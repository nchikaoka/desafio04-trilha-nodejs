{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge 5 - Documenting with Swagger",
    "description": "Exercise to create an API documentation with Swagger - API for users registration and listing",
    "version": "1.0.0",
    "contact": "natan.chikaoka@gmail.com"
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "admin": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        },
        "required": [
          "admin",
          "name",
          "created_at",
          "updated_at"
        ],
        "example": {
          "id": "25a3d14f-a4b5-4e47-b4e5-207580217a0f",
          "admin": false,
          "name": "John Doe",
          "email": "john.doe@email.com",
          "created_at": "2021-11-20T22:20:58.132Z",
          "updated_at": "2021-11-20T22:20:58.132Z"
        }
      }
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "user management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@email.com"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "400": {
            "description": "Email address is already taken",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "email address is already taken!"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Lists all registered users",
        "description": "Authorized only for `admin` users",
        "parameters": [
          {
            "name": "user_id",
            "description": "user id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "user's id (uuid)"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/user"
                  }
                },
                "example": [
                  {
                    "id": "25a3d14f-a4b5-4e47-b4e5-207580217a0f",
                    "admin": false,
                    "name": "John Doe",
                    "email": "john.doe@email.com",
                    "created_at": "2021-11-20T22:20:58.132Z",
                    "updated_at": "2021-11-20T22:20:58.132Z"
                  },
                  {
                    "id": "8ff30958-831c-47cc-a621-7bf67e71f28d",
                    "admin": true,
                    "name": "Mary Doe",
                    "email": "mary.doe@email.com",
                    "created_at": "2021-11-23T00:15:36.184Z",
                    "updated_at": "2021-11-23T00:15:59.329Z"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Unauthorized or user not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Unauthorized user or user does not exists!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retrieves a user info",
        "description": "Returns a user profile given its `id`",
        "parameters": [
          {
            "name": "user_id",
            "description": "user id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "user's id (uuid)"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "400": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not found!"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}