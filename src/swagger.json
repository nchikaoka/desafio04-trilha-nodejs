{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge 5 - Documenting with Swagger",
    "description": "Exercise to create an API documentation with Swagger - API for users registration and listing",
    "version": "1.0.0",
    "contact": "natan.chikaoka@gmail.com"
  },
  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "admin": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        },
        "required": [
          "admin",
          "name",
          "created_at",
          "updated_at"
        ],
        "example": {
          "id": "25a3d14f-a4b5-4e47-b4e5-207580217a0f",
          "admin": false,
          "name": "John Doe",
          "email": "john.doe@email.com",
          "created_at": "2021-11-20T22:20:58.132Z",
          "updated_at": "2021-11-20T22:20:58.132Z"
        }
      }
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "user management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@email.com"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "400": {
            "description": "Email address is already taken",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "email address is already taken!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "get": {
      "tags": [
        "users"
      ],
      "summary": "Lists all registered users"
    }
  }
}